<!--pages/invitation/invitation.wxml-->
<view>
  <text>尊敬的</text>
  <text class='keyword'>{{guest}}</text>
  <text>先生，这是一份婚礼邀请函。我们诚挚地邀请您于</text>
  <text class='keyword'>几月几号（农历几月几号）几点</text>
  <text>，在</text>
  <text class='keyword'>哪个地方</text>
  <text>，参加我们的婚礼。</text>
</view>
<view>
  <button bindtap='navigateToWedding'>一键导航</button>
</view>
<view>
  <input placeholder='一句祝福语，带你上微信墙' confirm-type='ok' bindconfirm='submitWishes' />
</view>